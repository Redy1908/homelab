{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":timezone(Europe/Rome)",
    ":semanticCommits"
  ],
  "flux": {
    "managerFilePatterns": [
      "/clusters/.+\\.yaml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": [
      "/apps/.+\\.yaml$/"
    ]
  },
  "ansible": {
    "managerFilePatterns": [
      "/ansible/.+\\.yaml$/"
    ]
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "groupName": "container images"
    }
  ]
}
